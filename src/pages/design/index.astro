    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-text);
  }

  .main-service-card p {
    color: var(--color-text-muted);
    font-size: var(--text-base);
    line-height: 1.5;
  }

  .main-service-animation {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 50%;
    display: flex;
    align-items: stretch;
    justify-content: flex-end;
    overflow: hidden;
  }

