---
import type { Lang } from '@/i18n';
import { getBaseUrl } from '@/i18n';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import CtaFaq from '@/components/CtaFaq.astro';
import Faq from '@/components/Faq.astro';
import Partners from '@/components/Partners.astro';

const lang: Lang = 'en';
const base = getBaseUrl(lang);

const faqItems = [
  {
    question: "What is the minimum advance payment?",
    answer: "The minimum advance payment is only 15% of contract value. Deferred payment of up to 30% of the value until equipment commissioning is also available."
  },
  {
    question: "Is installment available?",
    answer: "Yes, for priority projects, a 12-month installment program for 50% of contract value is available."
  },
  {
    question: "What are the order completion times?",
    answer: "Terms are set individually, however, according to general conditions, the order will be completed within 5 months from receipt of full payment under the contract."
  },
  {
    question: "Is warranty provided on equipment?",
    answer: "Yes, all supplied products come with manufacturer warranty or service agreement. Terms and conditions are specified in each specific case."
  }
];

const conditions = [
  {
    title: 'Order Completion Times',
    description: 'Order completion times are set considering individual specifics, however, according to general conditions, the order will be completed within 5 months from receipt of full payment under the contract.',
    icon: '/img/cooperation/order_times.png'
  },
  {
    title: 'Warranty',
    description: 'All supplied products come with manufacturer warranty or service agreement. Terms and conditions can be specified in each specific case.',
    icon: '/img/cooperation/warranty.png'
  },
  {
    title: 'Certification',
    description: 'When supplying equipment requiring certification, we provide copies of necessary certificates and quality passports.',
    icon: '/img/cooperation/certification.png'
  },
  {
    title: 'Contact Information',
    description: '',
    icon: '/img/cooperation/contacts.png',
    contacts: [
      { text: 'Tel: 8(916) 111-4-555' },
      { text: 'Email: office@rustrade.pro' },
      { text: 'Perm, Oleg Koshevoy St., 31, room 20.' },
      { text: 'Moscow, Leninsky Prospekt, 109, office 35.' },
      { text: 'Monday – Friday, 9:00 – 18:00' }
    ]
  }
];
---

<BaseLayout 
  lang={lang} 
  title="Cooperation Terms — Payment, Delivery, Warranty | RUSTRADE"
  description="Payment and delivery terms for power equipment. Advance payment from 15%, 12-month installment, leasing. Manufacturer warranty up to 24 months."
  keywords="RUSTRADE cooperation terms, turbine payment, equipment delivery, installment, turbine leasing, warranty"
  faqData={faqItems}
  breadcrumbs={[{ name: 'Cooperation Terms', url: '/eng/cooperation' }]}
>
  <Breadcrumbs items={[{ label: 'Cooperation Terms' }]} lang={lang} />

  <!-- Main Payment Block -->
  <section class="payment-block">
    <div class="payment-image">
      <img src="/img/cooperation/oplata_3.webp" alt="Payment and delivery" />
      <div class="image-overlay-bottom">
        <h2>Payment Methods</h2>
        <p>We value your time and strive to provide convenient cooperation terms.</p>
      </div>
    </div>
    <div class="payment-info">
      <div class="info-block">
        <div class="info-header">
          <div class="info-icon">
            <img src="/img/cooperation/beznal_icon.png" alt="Bank Transfer" />
          </div>
          <span class="info-title">All About Payment</span>
        </div>
        <p>In response to market demands, we have developed optimal payment terms for customer convenience and comfort</p>
        <ul class="info-benefits">
          <li>Advance payment from only 15% of the contract value</li>
          <li>Option for deferred payment until equipment commissioning up to 30% of the contract value</li>
        </ul>
      </div>
      <div class="info-block">
        <div class="info-header">
          <div class="info-icon">
            <img src="/img/cooperation/lizing.png" alt="Leasing / Installments" />
          </div>
          <span class="info-title">Installment Plan</span>
        </div>
        <ul class="info-benefits">
          <li>Availability of demand stimulation program providing 12-month installments for 50% of contract value for highest priority projects</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Conditions Grid -->
  <section class="conditions-section">
    <div class="conditions-grid">
      {conditions.map(condition => (
        <div class="condition-card">
          <div class="condition-header">
            <img src={condition.icon} alt={condition.title} class="condition-icon" />
            <span class="condition-title">{condition.title}</span>
          </div>
          {condition.description && (
            <ul class="condition-benefits">
              <li>{condition.description}</li>
            </ul>
          )}
          {condition.contacts && (
            <ul class="condition-benefits">
              {condition.contacts.map(contact => (
                <li>{contact.text}</li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>
  </section>

  <!-- Delivery Block -->
  <section class="delivery-block">
    <div class="delivery-image">
      <img src="/img/cooperation/Dostavka_3.webp" alt="Delivery" />
      <div class="delivery-overlay">
        <h2>Delivery Terms and Methods</h2>
        <div class="delivery-details">
          <div class="delivery-section">
            <h3>Railway Delivery</h3>
            <p>For railway transportation, we supervise loading and secure fastening quality on the platform.</p>
          </div>
          <div class="delivery-section">
            <h3>In-House Logistics</h3>
            <p>We can deliver equipment using our own resources. Our approach ensures prompt, safe and reliable transportation, as well as timely arrival of equipment in perfect condition.</p>
          </div>
          <div class="delivery-section">
            <h3>Components and Spare Parts Delivery</h3>
            <p>Equipment, spare parts and components can be shipped via transport companies, with trucking payment made according to current carrier rates.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <Partners lang={lang} />

  <Faq items={faqItems} lang={lang} />

  <CtaFaq lang={lang} />
</BaseLayout>

<style>
  /* Payment Block */
  .payment-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .payment-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: 500px;
  }

  .payment-image > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .image-overlay-top {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.95);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
  }

  .circle-icon img {
    width: 20px;
    height: 20px;
  }

  .image-overlay-top span {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-primary);
  }

  .image-overlay-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-6);
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  }

  .image-overlay-bottom h2 {
    font-size: var(--text-2xl);
    color: var(--color-white);
    margin-bottom: var(--space-2);
  }

  .image-overlay-bottom p {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }

  .payment-info {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .info-block {
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-border);
  }

  .info-block:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .info-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .info-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #c5dff0 0%, #a8d4ed 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2);
  }

  .info-icon img {
    width: 28px;
    height: 28px;
    object-fit: contain;
    filter: brightness(0);
  }

  .info-title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-primary);
  }

  .info-block > p {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .info-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .info-benefits li {
    position: relative;
    padding-left: var(--space-5);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-3);
  }

  .info-benefits li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    width: 8px;
    height: 8px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  /* Conditions Section */
  .conditions-section {
    margin-bottom: var(--space-8);
  }

  .conditions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
  }

  .condition-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-5);
  }

  .condition-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .condition-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .condition-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-primary);
  }

  .condition-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .condition-benefits li {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-2);
  }

  /* Delivery Block */
  .delivery-block {
    margin-bottom: var(--space-8);
  }

  .delivery-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: 450px;
  }

  .delivery-image > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .delivery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-8);
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 50%, transparent 100%);
  }

  .delivery-overlay h2 {
    font-size: var(--text-2xl);
    color: var(--color-white);
    margin-bottom: var(--space-6);
  }

  .delivery-details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .delivery-section h3 {
    font-size: var(--text-base);
    color: var(--color-white);
    margin-bottom: var(--space-2);
  }

  .delivery-section p {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: var(--radius-xl);
    padding: var(--space-10);
    margin-bottom: var(--space-10);
  }

  .cta-content {
    text-align: center;
  }

  .cta-content h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-3);
    color: var(--color-primary);
  }

  .cta-content p {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 1200px) {
    .conditions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .payment-block {
      grid-template-columns: 1fr;
    }

    .payment-image {
      min-height: 350px;
    }

    .delivery-details {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }

  @media (max-width: 768px) {
    .conditions-grid {
      grid-template-columns: 1fr;
    }

    .delivery-image {
      min-height: 600px;
    }

    .delivery-overlay {
      padding: var(--space-5);
    }
  }
</style>
