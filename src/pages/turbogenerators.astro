---
import type { Lang } from '@/i18n';
import { getBaseUrl } from '@/i18n';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import Faq from '@/components/Faq.astro';
import Partners from '@/components/Partners.astro';

const lang: Lang = 'ru';
const base = getBaseUrl(lang);

const faqItems = [
  {
    question: "Какие типы турбогенераторов вы поставляете?",
    answer: "Мы поставляем синхронные и асинхронные генераторы мощностью от 15 кВт до 40 МВт с напряжением 0,4 кВ, 6,3 кВ и 10,5 кВ. Доступны модели со статической или бесщеточной системой возбуждения."
  },
  {
    question: "Каковы сроки поставки турбогенератора?",
    answer: "Сроки поставки зависят от типа и мощности турбогенератора. Стандартные модели — от 4 до 10 месяцев, турбогенераторы по индивидуальному заказу — от 10 до 16 месяцев. Точные сроки согласовываются при заключении договора."
  },
  {
    question: "Какая система охлаждения используется в генераторах?",
    answer: "Наши генераторы оснащены воздушной системой охлаждения по замкнутому контуру с водяным охлаждением воздухоохладителей (CACW), что обеспечивает надежную работу в различных климатических условиях."
  },
  {
    question: "Предоставляете ли вы гарантию на турбогенераторы?",
    answer: "Да, на все турбогенераторное оборудование предоставляется гарантия от 12 до 24 месяцев. Также доступны расширенные сервисные контракты с круглосуточной технической поддержкой."
  }
];

const generatorTypes = [
  {
    title: 'Синхронные генераторы',
    description: 'Надежные генераторы для стабильной выработки электроэнергии с высоким КПД и точным контролем напряжения и частоты.',
    image: '/img/turbogenerators/synchronous_generator.webp'
  },
  {
    title: 'Асинхронные генераторы',
    description: 'Простая и экономичная конструкция для промышленных применений с минимальным техническим обслуживанием.',
    image: '/img/turbogenerators/asynchronous_generator.webp'
  }
];

const voltageOptions = [
  { value: '0,4 кВ', description: 'Для небольших объектов и локальных сетей' },
  { value: '6,3 кВ', description: 'Для промышленных предприятий средней мощности' },
  { value: '10,5 кВ', description: 'Для крупных энергетических объектов' }
];

const excitationSystems = [
  {
    title: 'Статическая система возбуждения',
    description: 'Быстрый отклик на изменения нагрузки, высокая точность регулирования напряжения',
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect x="8" y="14" width="32" height="20" rx="2" stroke="currentColor" stroke-width="2"/>
      <path d="M16 22V26M24 20V28M32 22V26" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      <path d="M8 24H4M44 24H40" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    </svg>`
  },
  {
    title: 'Бесщеточная система возбуждения',
    description: 'Минимальное обслуживание, отсутствие изнашиваемых контактов, высокая надежность',
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="24" cy="24" r="16" stroke="currentColor" stroke-width="2"/>
      <circle cx="24" cy="24" r="8" stroke="currentColor" stroke-width="2" fill="currentColor" fill-opacity="0.1"/>
      <path d="M24 8V16M24 32V40M8 24H16M32 24H40" stroke="currentColor" stroke-width="2"/>
    </svg>`
  }
];

const advantages = [
  {
    title: 'Экономическое преимущество',
    description: 'Существенная экономия по сравнению с российскими или европейскими аналогами при сохранении высокого качества'
  },
  {
    title: 'Надежные решения',
    description: 'Проверенные технологии и комплектующие от ведущих мировых производителей'
  },
  {
    title: 'Полная комплектация',
    description: 'Турбогенераторные установки полной заводской готовности с системами управления и защиты'
  },
  {
    title: 'Техническая поддержка',
    description: 'Квалифицированная команда инженеров обеспечивает поддержку на всех этапах проекта'
  }
];

const stats = [
  { value: 50, label: 'Выполненных проектов' },
  { value: 30, label: 'Постоянных клиентов' },
  { value: 5, label: 'Лет опыта' },
  { value: 20, label: 'Ведущих специалистов' }
];
---

<BaseLayout 
  lang={lang} 
  title="Турбогенераторы | РУСТРЕЙД"
  description="Турбогенераторные установки малой и средней мощности от 15 кВт до 40 МВт. Синхронные и асинхронные генераторы с различными системами возбуждения."
  keywords="турбогенераторы, генераторы, турбогенераторные установки, синхронные генераторы, асинхронные генераторы, РУСТРЕЙД"
>
  <Breadcrumbs items={[{ label: 'Турбогенераторы' }]} />

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Турбогенераторы</h1>
      <p>Турбогенераторные установки малой и средней мощности от 15 кВт до 40 МВт, преобразующие механическую энергию вращения ротора в электрическую энергию переменного тока</p>
      <div class="hero-buttons">
        <button class="btn btn-accent" data-modal="turbogenerator">
          <span>Заказать турбогенератор</span>
          <img src="/img/arrow_right.svg" alt="" width="16" height="16" />
        </button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section about-turbines">
    <div class="section-header">
      <h2>О турбогенераторных установках</h2>
    </div>
    <div class="about-content">
      <div class="about-text">
        <p>
          ООО «РУСТРЕЙД» специализируется на турбогенераторных установках малой и средней мощности (от 15 кВт до 40 МВт), которые преобразуют механическую энергию вращения ротора в электрическую энергию переменного тока.
        </p>
        <p>
          Мы предлагаем своим клиентам синхронные и асинхронные генераторы с напряжением 0,4 кВ, 6,3 кВ и 10,5 кВ, со статической или бесщеточной системой возбуждения.
        </p>
        <p>
          Все генераторы оснащены воздушной системой охлаждения по замкнутому контуру с водяным охлаждением воздухоохладителей (CACW), что обеспечивает надежную работу в любых условиях.
        </p>
        <p>
          Мы обеспечиваем своим клиентам надежные и эффективные решения с существенным экономическим преимуществом по сравнению с российскими или европейскими аналогами.
        </p>
      </div>
      <div class="about-image">
        <img src="/img/turbines/majer_5.jpg" alt="Турбогенератор" />
      </div>
    </div>
  </section>

  <!-- Generator Types Section -->
  <section class="section generator-types">
    <div class="section-header">
      <h2>Типы генераторов</h2>
      <p>Мы поставляем различные типы генераторов для решения ваших задач</p>
    </div>
    <div class="generator-types-grid">
      {generatorTypes.map(gen => (
        <div class="generator-card">
          <img src={gen.image} alt={gen.title} class="generator-bg-image" />
          <div class="generator-content">
            <div class="generator-title-wrapper">
              <h3>{gen.title}</h3>
            </div>
            <div class="generator-description">
              <p>{gen.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Voltage Options Section -->
  <section class="section voltage-section">
    <div class="section-header">
      <h2>Варианты напряжения</h2>
      <p>Генераторы доступны с различными вариантами выходного напряжения</p>
    </div>
    <div class="voltage-grid">
      {voltageOptions.map(opt => (
        <div class="voltage-card">
          <div class="voltage-value">{opt.value}</div>
          <p>{opt.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Excitation Systems Section -->
  <section class="section excitation-section">
    <div class="section-header">
      <h2>Системы возбуждения</h2>
      <p>Выберите оптимальную систему возбуждения для ваших требований</p>
    </div>
    <div class="excitation-grid">
      {excitationSystems.map(sys => (
        <div class="excitation-card">
          <div class="excitation-icon" set:html={sys.icon} />
          <h3>{sys.title}</h3>
          <p>{sys.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Technical Features Section with 3D Turbine -->
  <section class="section tech-features-infographic">
    <!-- 3D Turbine as full background -->
    <div class="turbine-3d-container" id="turbine-canvas"></div>
    
    <!-- Content overlay -->
    <div class="tech-features-content">
      <div class="section-header">
        <h2>Технические характеристики</h2>
        <p>Профессиональное оборудование для надежной генерации электроэнергии</p>
      </div>
      
      <!-- Feature Cards - vertical stack on left -->
      <div class="tech-features-cards">
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L4 14V34L24 44L44 34V14L24 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="M24 18L14 23V33L24 38L34 33V23L24 18Z" fill="currentColor" opacity="0.2"/>
              <path d="M24 4V18M4 14L24 24M44 14L24 24" stroke="currentColor" stroke-width="2"/>
              <circle cx="24" cy="24" r="6" stroke="currentColor" stroke-width="2"/>
              <path d="M21 24L23 26L27 22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Высокое качество</h3>
          <p>Генераторы от ведущих мировых производителей с многоступенчатым контролем качества на всех этапах</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="24" cy="24" r="18" stroke="currentColor" stroke-width="2"/>
              <path d="M24 12V24L32 28" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M38 24C38 31.732 31.732 38 24 38" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
              <path d="M12 18L8 14M36 18L40 14M24 6V10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <circle cx="24" cy="24" r="4" fill="currentColor" opacity="0.3"/>
            </svg>
          </div>
          <h3>Высокий КПД до 98%</h3>
          <p>Эффективность преобразования механической энергии в электрическую благодаря современным технологиям</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L6 12V24C6 35 24 44 24 44C24 44 42 35 42 24V12L24 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="M24 10L12 16V24C12 31 24 38 24 38C24 38 36 31 36 24V16L24 10Z" fill="currentColor" opacity="0.15"/>
              <path d="M17 24L22 29L31 20" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Надежность в работе</h3>
          <p>Расчётный ресурс более 200 000 часов эксплуатации с минимальными затратами на обслуживание</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 8c-3.3 0-6 2.7-6 6s2.7 6 6 6c1.1 0 2.1-.3 3-.8L28 32.2c-.5.9-.8 1.9-.8 3 0 3.3 2.7 6 6 6s6-2.7 6-6-2.7-6-6-6c-1.1 0-2.1.3-3 .8L17.2 17c.5-.9.8-1.9.8-3 0-3.3-2.7-6-6-6z" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="currentColor" fill-opacity="0.15"/>
              <circle cx="12" cy="14" r="2.5" fill="currentColor"/>
              <circle cx="33.2" cy="35.2" r="2.5" fill="currentColor"/>
            </svg>
          </div>
          <h3>Полное сервисное сопровождение</h3>
          <p>Шеф-монтаж, пусконаладка, гарантийное обслуживание и техническая поддержка на всех этапах</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Advantages Section -->
  <section class="section advantages">
    <div class="section-header">
      <h2>Преимущества работы с нами</h2>
    </div>
    <div class="advantages-grid">
      {advantages.map((adv, index) => (
        <div class="advantage-card">
          <div class="advantage-number">{String(index + 1).padStart(2, '0')}</div>
          <h3>{adv.title}</h3>
          <p>{adv.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Stats Section -->
  <section class="section stats-section">
    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat-card">
          <div class="stat-value" data-value={stat.value}>0</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </section>

  <!-- Partners Section -->
  <Partners />

  <!-- CTA Section -->
  <section class="section cta">
    <div class="cta-content">
      <h2>Готовы повысить энергоэффективность вашей турбины?</h2>
      <p>Наши эксперты помогут выбрать оптимальную турбогенераторную установку</p>
      <button class="btn btn-accent" data-modal="consultation">
        <span>Получить консультацию</span>
        <img src="/img/arrow_right.svg" alt="" width="16" height="16" />
      </button>
    </div>
  </section>

  <Faq items={faqItems} />
</BaseLayout>

<style>
  /* Common Styles */
  .section {
    margin-bottom: var(--space-12);
  }

  .section-header {
    margin-bottom: var(--space-8);
  }

  .section-header h2 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-3);
  }

  .section-header p {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    max-width: 700px;
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(59deg, rgba(42, 45, 46, 0.85) 0%, rgba(0, 0, 0, 0.60) 31.59%, rgba(42, 45, 46, 0.85) 100%), 
                url('/img/turbines/turbines_1.png') center/cover no-repeat;
    border-radius: var(--radius-xl);
    padding: var(--space-12) var(--space-8);
    margin-bottom: var(--space-12);
    min-height: 450px;
    display: flex;
    align-items: center;
  }

  .hero-content {
    max-width: 700px;
    color: var(--color-white);
  }

  .hero h1 {
    font-size: clamp(32px, 5vw, 48px);
    color: var(--color-white);
    margin-bottom: var(--space-4);
    letter-spacing: -1px;
  }

  .hero p {
    font-size: var(--text-lg);
    opacity: 0.9;
    margin-bottom: var(--space-8);
    line-height: 1.6;
    max-width: 600px;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-4);
  }

  /* About Section */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
    align-items: start;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .about-text p {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  .about-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    height: 100%;
    min-height: 400px;
  }

  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .about-image:hover img {
    transform: scale(1.03);
  }

  /* Stats Section */
  .stats-section {
    margin-bottom: var(--space-12);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    border: 1px solid var(--color-border);
  }

  .stat-card {
    text-align: center;
    padding: var(--space-4);
    border-right: 1px solid var(--color-border);
  }

  .stat-card:last-child {
    border-right: none;
  }

  .stat-value {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: var(--text-base);
    color: var(--color-text-muted);
  }

  /* Generator Types */
  .generator-types-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .generator-card {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    min-height: 350px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    transition: all 0.3s ease;
  }

  .generator-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .generator-card:hover .generator-bg-image {
    transform: scale(1.05);
  }

  .generator-card:hover .generator-description {
    opacity: 1;
    transform: translateY(0);
  }

  .generator-card:hover .generator-title-wrapper {
    transform: translateY(0);
  }

  .generator-bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    z-index: 1;
  }

  .generator-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .generator-title-wrapper {
    display: inline-flex;
    align-self: flex-start;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 50px;
    padding: var(--space-3) var(--space-5);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: transform 0.4s ease;
    margin-top: auto;
    transform: translateY(50px);
  }

  .generator-card h3 {
    font-size: var(--text-xl);
    color: var(--color-white);
    margin: 0;
    font-weight: 600;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .generator-description {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 50px;
    padding: var(--space-4) var(--space-5);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .generator-card p {
    font-size: var(--text-base);
    color: var(--color-white);
    line-height: 1.6;
    margin: 0;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Voltage Section */
  .voltage-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .voltage-card {
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    color: var(--color-white);
    text-align: center;
    transition: all 0.3s ease;
  }

  .voltage-card:nth-child(1) {
    background: linear-gradient(135deg, #8a9eb0 0%, #7a8ea0 100%);
  }

  .voltage-card:nth-child(2) {
    background: linear-gradient(135deg, #9bb5cc 0%, #8ba5bc 100%);
  }

  .voltage-card:nth-child(3) {
    background: linear-gradient(135deg, #b0d0e8 0%, #a0c8e0 100%);
  }

  .voltage-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .voltage-value {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

