    vec4 defaultPos = texture2D(textureDefaultPosition, uv);
    float spawnAngle = defaultPos.w * 6.28318 + turbineRotation * 3.0;
    float radius = 2.6 + defaultPos.x * 0.6;
    float stageX = -1.2 + defaultPos.y * 2.4;
    position.x = stageX;
