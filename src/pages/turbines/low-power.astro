---
import type { Lang } from '@/i18n';
import { getBaseUrl } from '@/i18n';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import CtaFaq from '@/components/CtaFaq.astro';
import Faq from '@/components/Faq.astro';

const lang: Lang = 'ru';
const base = getBaseUrl(lang);

const faqItems = [
  {
    question: "Какой диапазон мощности турбин малой мощности?",
    answer: "Мы поставляем паровые турбины малой мощности в диапазоне от 15 кВт до 4 МВт. Это оптимальный сегмент для промышленных предприятий с излишками пара или для замены неэффективных РОУ."
  },
  {
    question: "Какой срок окупаемости турбин малой мощности?",
    answer: "Благодаря существенному экономическому преимуществу наших решений срок окупаемости может составлять 1,5–2 года. Ранее такие проекты были экономически нецелесообразны из-за высокой стоимости турбин российских и европейских брендов."
  },
  {
    question: "Можно ли установить турбину параллельно с РОУ?",
    answer: "Да, это классическое применение турбин малой мощности. Установка паровой турбины параллельно РОУ позволяет не только снизить параметры пара, но и выработать электроэнергию, принося существенную экономию заказчику."
  },
  {
    question: "Какие варианты исполнения доступны?",
    answer: "Паровые турбины могут быть обычного исполнения или полной заводской готовности в зависимости от потребностей клиента. ПТУ полной готовности существенно удешевляет СМР и ПНР."
  }
];

const advantages = [
  {
    title: 'Быстрая окупаемость',
    description: 'Срок окупаемости от 1,5 до 2 лет благодаря оптимальной стоимости и высокой эффективности решений',
    icon: '/img/icons/price.svg',
    stat: '1,5–2',
    unit: 'года'
  },
  {
    title: 'Полная заводская готовность',
    description: 'Поставка на раме со всем вспомогательным оборудованием — существенное удешевление СМР и ПНР',
    icon: '/img/icons/full_ready.svg',
    stat: '100%',
    unit: 'готовность'
  },
  {
    title: 'Высокий КПД',
    description: 'Возможность изготовления высокоэффективных ПТУ с увеличенным КПД для максимальной отдачи',
    icon: '/img/icons/quality.svg',
    stat: 'до 85%',
    unit: 'КПД'
  },
  {
    title: 'Экономия на энергии',
    description: 'Использование излишков пара для выработки электроэнергии вместо сброса в атмосферу',
    icon: '/img/icons/effective.svg',
    stat: 'до 40%',
    unit: 'экономии'
  },
  {
    title: 'Широкий диапазон мощностей',
    description: 'Турбины от 15 кВт до 4 МВт для различных промышленных применений',
    icon: '/img/icons/bolt.svg',
    stat: '15 кВт–4',
    unit: 'МВт'
  },
  {
    title: 'Короткие сроки производства',
    description: 'Срок производства минимум в 1,5 раза короче по сравнению с российскими и европейскими аналогами',
    icon: '/img/icons/fast.svg',
    stat: '×1,5',
    unit: 'быстрее'
  },
  {
    title: 'Локализованный сервис',
    description: 'Собственная сервисная служба с запасом расходных частей и материалов более чем на 3 года',
    icon: '/img/icons/easy_install.svg',
    stat: '3+',
    unit: 'года запас'
  },
  {
    title: 'Индивидуальное проектирование',
    description: 'Каждая турбина проектируется под конкретные потребности и параметры клиента',
    icon: '/img/icons/design.svg',
    stat: '100%',
    unit: 'кастом'
  }
];

const applications = [
  'Промышленные предприятия с излишками пара',
  'Замена неэффективных РОУ',
  'Предприятия с бесплатным сырьём для пара',
  'Объекты с избыточным давлением пара',
  'Производства с потребностью в электроэнергии'
];

const benefits = [
  'Выработка электроэнергии из «дармового» пара',
  'Снижение затрат на покупную электроэнергию',
  'Полезная работа вместо простого сброса давления',
  'Повышение энергоэффективности предприятия',
  'Сокращение выбросов в атмосферу'
];
---

<BaseLayout 
  lang={lang} 
  title="Паровые турбины малой мощности от 15 кВт — РУСТРЕЙД"
  description="Паровые турбины малой мощности от 15 кВт до 4 МВт. Срок окупаемости 1,5–2 года. Замена РОУ на турбогенератор. Полная заводская готовность, индивидуальное проектирование."
  keywords="турбины малой мощности купить, паровые турбины 15 кВт, турбины 4 МВт, замена РОУ, энергоэффективность, РУСТРЕЙД"
  image="/img/turbines/low_turbine.webp"
  faqData={faqItems}
  breadcrumbs={[{ name: 'Паровые турбины', url: '/turbines' }, { name: 'Турбины малой мощности', url: '/turbines/low-power' }]}
  productData={{
    name: 'Паровые турбины малой мощности',
    description: 'Паровые турбины малой мощности от 15 кВт до 4 МВт с полной заводской готовностью',
    image: '/img/turbines/low_turbine.webp',
    category: 'Паровые турбины',
    sku: 'LOW-POWER-TURBINE'
  }}
>
  <Breadcrumbs items={[
    { label: 'Паровые турбины', href: '/turbines' },
    { label: 'Турбины малой мощности' }
  ]} />

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Паровые турбины малой мощности</h1>
      <p>Эффективные решения от 15 кВт до 4 МВт со сроком окупаемости 1,5–2 года. Получите экономический эффект даже там, где раньше это было невозможно</p>
      <div class="hero-buttons">
        <button class="button-47" data-modal="turbine">
          <span class="button-47__circle">
            <svg class="button-47__icon-svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path class="icon-fan" d="M12 12c0-3 2.5-5 5-5 2.5 0 5 1.5 5 5s-2.5 5-5 5c-2.5 0-5-2-5-5zm0 0c0 3-2.5 5-5 5-2.5 0-5-1.5-5-5s2.5-5 5-5c2.5 0 5 2 5 5zm0 0c3 0 5-2.5 5-5 0-2.5-1.5-5-5-5-3 0-5 2.5-5 5 0 2.5 2 5 5 5zm0 0c-3 0-5 2.5-5 5 0 2.5 1.5 5 5 5 3 0 5-2.5 5-5 0-2.5-2-5-5-5z"/>
            </svg>
          </span>
          <span class="button-47__text">Подобрать решение</span>
        </button>
      </div>
    </div>
  </section>

  <!-- Application Section -->
  <section class="section application">
    <div class="section-grid">
      <div class="section-content">
        <div class="section-header">
          <h2>Применение</h2>
        </div>
        <p class="section-intro">
          Решения на базе паровых турбин малой мощности позволяют использовать излишки пара для выработки электроэнергии вместо бесполезного сброса через РОУ
        </p>
        <div class="application-lists">
          <div class="application-list">
            <h3>Где применяются</h3>
            <ul>
              {applications.map(item => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
          <div class="application-list">
            <h3>Преимущества установки</h3>
            <ul>
              {benefits.map(item => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
      <div class="section-image">
        <img src="/img/turbines/low_turbine.webp" alt="Паровая турбина малой мощности" />
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section about-turbines">
    <div class="about-turbines-container">
      <div class="about-turbines-header">
        <h2>Почему турбины малой мощности?</h2>
      </div>
      
      <div class="about-turbines-content">
        <div class="about-main-text">
          <p class="lead-text">
            <strong>Промышленные предприятия</strong> зачастую имеют излишки пара на производстве или пар более высоких параметров, чем необходимо. Наши решения позволяют не выбрасывать деньги в трубу, а использовать этот пар для выработки электроэнергии.
          </p>
          
          <div class="info-columns">
            <div class="info-column">
              <h3>Проблема РОУ</h3>
              <p>
                Классический пример — когда промышленное предприятие для снижения параметров пара использует РОУ (редукционно-охладительные установки). Эти установки снижают давление и температуру пара, но не производят никакой полезной работы.
              </p>
              <p>
                Установка паровой турбины параллельно РОУ позволяет выполнить ту же работу по снижению параметров, но при этом выработать электроэнергию за счёт «дармового» пара.
              </p>
            </div>
            
            <div class="info-column">
              <h3>Наше решение</h3>
              <p>
                Ранее проекты на базе паровых турбин малой мощности не могли быть реализованы из-за высокой стоимости турбин российских и европейских брендов. Это делало их экономически нецелесообразными.
              </p>
              <p>
                Предлагаемые нами решения позволяют существенно снизить стоимость реализации таких проектов и получать выгоду даже там, где раньше это было невозможно. Срок окупаемости может составлять всего 1,5–2 года.
              </p>
            </div>
          </div>
        </div>
        
        <div class="tech-specs-highlight">
          <div class="spec-item">
            <div class="spec-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
              </svg>
            </div>
            <div class="spec-text">
              <span class="spec-label">Срок окупаемости</span>
              <span class="spec-value">1,5–2 года</span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
              </svg>
            </div>
            <div class="spec-text">
              <span class="spec-label">Диапазон мощности</span>
              <span class="spec-value">15 кВт – 4 МВт</span>
            </div>
          </div>
          <div class="spec-item">
            <div class="spec-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 6v6l4 2"/>
              </svg>
            </div>
            <div class="spec-text">
              <span class="spec-label">Производство быстрее в</span>
              <span class="spec-value">1,5 раза</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Individual Approach Section -->
  <section class="section approach">
    <div class="section-header">
      <h2>Индивидуальный подход</h2>
      <p>Проектирование каждой турбины под потребности клиента</p>
    </div>
    <div class="approach-grid">
      <div class="approach-card approach-card-1">
        <h3>Точное проектирование</h3>
        <ul>
          <li>Метод реализации основан на точном проектировании и конструировании</li>
          <li>Этапы контроля в соответствии с Российскими и мировыми стандартами</li>
          <li>Индивидуальное решение под каждого заказчика</li>
        </ul>
      </div>
      <div class="approach-card approach-card-2">
        <h3>Высокоэффективные ПТУ</h3>
        <ul>
          <li>Увеличенный КПД для максимальной энергоэффективности</li>
          <li>Оптимизированный баланс пара и производительности</li>
        </ul>
      </div>
      <div class="approach-card approach-card-3 approach-card-with-bg" style="background-image: url('/img/turbines/4enhanced_blue_turbine_detailed.webp');">
        <div class="approach-card-overlay"></div>
        <div class="approach-card-content">
          <h3>Полная заводская готовность</h3>
          <ul>
            <li>Поставка в полностью собранном виде на раме</li>
            <li>Всё вспомогательное оборудование включено</li>
            <li>Существенное удешевление СМР и ПНР</li>
            <li>Локализованная сервисная служба</li>
          </ul>
        </div>
      </div>
      <div class="approach-card approach-card-4">
        <h3>Вариативность решений</h3>
        <ul>
          <li><strong>Высокоэффективные ПТУ</strong> — с увеличенным КПД для максимальной отдачи</li>
          <li><strong>Средне эффективные ПТУ</strong> — оптимальный баланс эффективности и стоимости</li>
          <li><strong>Низкоэффективные ПТУ</strong> — для предприятий, где пар просто утилизируется или сырьё бесплатное</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Technical Features Section with 3D Turbine -->
  <section class="section tech-features-infographic">
    <!-- 3D Turbine as full background -->
    <div class="turbine-3d-container" id="turbine-canvas"></div>
    
    <!-- Content overlay -->
    <div class="tech-features-content">
      <div class="section-header">
        <h2>Технические характеристики</h2>
        <p>Компактные решения для промышленных предприятий с излишками пара</p>
      </div>
      
      <!-- Feature Cards - vertical stack on left -->
      <div class="tech-features-cards">
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L4 14V34L24 44L44 34V14L24 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="M24 18L14 23V33L24 38L34 33V23L24 18Z" fill="currentColor" opacity="0.2"/>
              <circle cx="24" cy="24" r="6" stroke="currentColor" stroke-width="2"/>
              <path d="M21 24L23 26L27 22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Компактная конструкция</h3>
          <p>Турбины от 15 кВт до 4 МВт идеально подходят для установки в ограниченном пространстве</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="24" cy="24" r="18" stroke="currentColor" stroke-width="2"/>
              <path d="M24 12V24L32 28" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M38 24C38 31.732 31.732 38 24 38" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
              <circle cx="24" cy="24" r="4" fill="currentColor" opacity="0.3"/>
            </svg>
          </div>
          <h3>Быстрая окупаемость</h3>
          <p>Срок возврата инвестиций 1,5–2 года благодаря использованию избыточного пара</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L6 12V24C6 35 24 44 24 44C24 44 42 35 42 24V12L24 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="M24 10L12 16V24C12 31 24 38 24 38C24 38 36 31 36 24V16L24 10Z" fill="currentColor" opacity="0.15"/>
              <path d="M17 24L22 29L31 20" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Замена неэффективных РОУ</h3>
          <p>Полезная работа вместо простого снижения параметров пара без выработки энергии</p>
        </div>
        
        <div class="infographic-card">
          <div class="card-icon">
            <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="8" y="14" width="32" height="20" rx="2" stroke="currentColor" stroke-width="2"/>
              <path d="M16 22V26M24 20V28M32 22V26" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M8 24H4M44 24H40" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Сервисная поддержка</h3>
          <p>Локализованная сервисная служба с запасом расходных частей более чем на 3 года</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Advantages Section -->
  <section class="section advantages">
    <div class="section-header">
      <h2>Ключевые преимущества</h2>
      <p>Наши турбины малой мощности сочетают экономичность и надёжность</p>
    </div>
    <div class="advantages-grid-new">
      {advantages.map((advantage, index) => (
        <div class="advantage-card-new" style={`--delay: ${index * 0.1}s`}>
          <div class="advantage-header">
            <div class="advantage-icon-new">
              <img src={advantage.icon} alt={advantage.title} />
            </div>
            <div class="advantage-stat">
              <span class="stat-number">{advantage.stat}</span>
              <span class="stat-unit">{advantage.unit}</span>
            </div>
          </div>
          <div class="advantage-body">
            <h3>{advantage.title}</h3>
            <p>{advantage.description}</p>
          </div>
          <div class="advantage-glow"></div>
        </div>
      ))}
    </div>
  </section>

  <Faq items={faqItems} />

  <CtaFaq />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, rgba(42, 45, 46, 0.9) 0%, rgba(0, 0, 0, 0.7) 100%), 
                url('/img/metal_gears_fixed_bolts.webp') center/cover no-repeat;
    border-radius: var(--radius-xl);
    padding: var(--space-16) var(--space-8);
    margin-bottom: var(--space-12);
    min-height: 450px;
    display: flex;
    align-items: center;
  }

  .hero-content {
    max-width: 700px;
    color: var(--color-white);
  }

  .hero h1 {
    font-size: clamp(36px, 6vw, 56px);
    color: var(--color-white);
    margin-bottom: var(--space-4);
    letter-spacing: -1px;
    line-height: 1.1;
  }

  .hero p {
    font-size: var(--text-lg);
    opacity: 0.9;
    line-height: 1.7;
    max-width: 600px;
    margin-bottom: var(--space-8);
  }

  /* Section Styles */
  .section {
    margin-bottom: var(--space-12);
  }

  .section-header {
    margin-bottom: var(--space-8);
  }

  .section-header h2 {
    font-size: var(--text-3xl);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .section-header p {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    max-width: 600px;
  }

  /* Application Section */
  .section-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .section-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .section-intro {
    font-size: var(--text-lg);
    color: var(--color-text);
    margin-bottom: var(--space-6);
    line-height: 1.7;
  }

  .application-lists {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }

  @media (max-width: 640px) {
    .application-lists {
      grid-template-columns: 1fr;
    }
  }

  .application-list h3 {
    font-size: var(--text-base);
