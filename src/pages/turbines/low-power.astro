      for (let j = 0; j < PARTICLE_COUNT; j++) {
        const idx = (i * PARTICLE_COUNT + j) * 3;
        positions[idx] = j / PARTICLE_COUNT;
        positions[idx + 1] = i / PARTICLE_COUNT;
        positions[idx + 2] = 0;
