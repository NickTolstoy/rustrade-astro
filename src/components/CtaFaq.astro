---
import type { Lang } from '@/i18n';
import { getBaseUrl } from '@/i18n';

interface Props {
  lang?: Lang;
}

const { lang = 'ru' } = Astro.props;
const base = getBaseUrl(lang);

const texts = {
  ru: {
    consultTitle: "Получить консультацию",
    consultDesc: "Наши специалисты помогут подобрать оптимальное решение для вашего предприятия и рассчитают экономический эффект",
    consultBtn: "Связаться с нами",
    faqTitle: "Все вопросы и ответы",
    faqDesc: "Ответы на часто задаваемые вопросы о турбогенераторных установках, сроках поставки и условиях сотрудничества",
    faqBtn: "Перейти в FAQ"
  },
  en: {
    consultTitle: "Get a Consultation",
    consultDesc: "Our specialists will help you find the optimal solution for your enterprise and calculate the economic effect",
    consultBtn: "Contact Us",
    faqTitle: "All Questions & Answers",
    faqDesc: "Answers to frequently asked questions about turbogenerator units, delivery times and cooperation terms",
    faqBtn: "Go to FAQ"
  }
};

const t = texts[lang];
---

<section class="cta-faq-section">
  <div class="cta-faq-cards">
    <div class="cta-faq-card">
      <h3>{t.consultTitle}</h3>
      <p>{t.consultDesc}</p>
      <button class="btn btn-accent" data-modal="consultation">
        <img src="/img/arrow_right.svg" alt="" width="16" height="16" />
        <span>{t.consultBtn}</span>
      </button>
    </div>
    
    <div class="cta-faq-card">
      <h3>{t.faqTitle}</h3>
      <p>{t.faqDesc}</p>
      <a href={`${base}/faq`} class="btn btn-accent">
        <img src="/img/arrow_right.svg" alt="" width="16" height="16" />
        <span>{t.faqBtn}</span>
      </a>
    </div>
  </div>
</section>

<style>
  .cta-faq-section {
    margin-bottom: var(--space-12);
  }

  .cta-faq-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }

  .cta-faq-card {
    display: flex;
    flex-direction: column;
    padding: 32px;
    background: linear-gradient(135deg, 
      #F8FAFC 0%,
      #F1F5F9 50%,
      #F8FAFC 100%);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
    position: relative;
    overflow: hidden;
    transition: box-shadow 0.4s ease;
  }

  .cta-faq-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(180deg, 
      rgba(255, 255, 255, 0.6) 0%, 
      transparent 100%);
    pointer-events: none;
  }

  .cta-faq-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
  }

  .cta-faq-card h3 {
    font-family: var(--font-heading);
    font-size: 24px;
    font-weight: 600;
    color: #1E293B;
    margin: 0 0 12px 0;
    position: relative;
    z-index: 1;
  }

  .cta-faq-card p {
    font-family: var(--font-body);
    font-size: 15px;
    line-height: 1.6;
    color: #475569;
    margin: 0 0 24px 0;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .cta-faq-card .btn {
    align-self: flex-start;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .cta-faq-cards {
      grid-template-columns: 1fr;
    }

    .cta-faq-card {
      padding: 24px;
    }

    .cta-faq-card h3 {
      font-size: 20px;
    }
  }
</style>

