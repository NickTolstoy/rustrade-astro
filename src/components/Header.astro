---
import type { Lang } from '@/i18n';
import { t, languages, langLabels, getBaseUrl, getAlternateUrl } from '@/i18n';
import { getMainNavigation, dropdownIcons } from '@/data/navigation';
import { cities } from '@/data/cities';

interface Props {
  lang: Lang;
  activeMenu?: string;
}

const { lang, activeMenu } = Astro.props;
const navigation = getMainNavigation(lang);
const currentCity = cities[0]; // Default contact info (Moscow)
const currentUrl = Astro.url.pathname;
const base = getBaseUrl(lang);
---

<header class="main-header">
  <div class="main-menu">
    <ul>
      {navigation.map((item) => (
        <li class:list={['menu-item', { 'has-dropdown': item.dropdown }]}>
          {item.dropdown ? (
            <>
              <span class="nav-dropdown-trigger">
                {(item.name === t('nav.components', lang) || item.name === t('nav.about', lang)) && (
                  <svg class="menu-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    {item.name === t('nav.components', lang) ? (
                      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                    ) : (
                      <>
                        <circle cx="12" cy="7" r="4"/>
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                      </>
                    )}
                  </svg>
                )}
                <span>{item.name}</span>
                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"/>
                </svg>
              </span>
              <ul class="dropdown-menu">
                {item.dropdown.map((subItem) => (
                  <li>
                    <a href={subItem.href}>
                      {subItem.icon && (
                        <svg class="dropdown-item-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" set:html={dropdownIcons[subItem.icon as keyof typeof dropdownIcons]} />
                      )}
                      <span>{subItem.name}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </>
          ) : (
            <a 
              href={item.href} 
              class:list={['nav-link', { active: activeMenu === item.name }]}
            >
              {item.icon && (
                <svg class="menu-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" set:html={dropdownIcons[item.icon as keyof typeof dropdownIcons]} />
              )}
              {item.name}
            </a>
          )}
        </li>
      ))}
    </ul>
  </div>
  
  <div class="header-right">
    <!-- Language Selector -->
    <div class="lang-selector">
      <button class="lang-trigger" type="button">
        <svg class="lang-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="2" y1="12" x2="22" y2="12"/>
          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
        </svg>
        <span>{langLabels[lang]}</span>
        <svg class="dropdown-arrow" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6 9 12 15 18 9"/>
        </svg>
      </button>
      <div class="selector-dropdown">
        {languages.map((l) => (
          <a 
            href={getAlternateUrl(currentUrl, l)}
            class:list={['lang-option', { active: l === lang }]}
          >
            {langLabels[l]}
          </a>
        ))}
      </div>
    </div>
    
    <!-- Phone -->
    <a href={`tel:${currentCity?.phone.replace(/[^+\d]/g, '')}`} class="header-phone">
      <svg class="phone-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
      </svg>
      <span>{currentCity?.phone}</span>
    </a>
    
    <!-- Email -->
    <a href={`mailto:${currentCity?.email}`} class="header-email">
      <svg class="email-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
        <polyline points="22,6 12,13 2,6"/>
      </svg>
      <span>{currentCity?.email}</span>
    </a>
    
    <!-- Callback Button -->
    <button class="callback-btn" data-modal="callback">
      {t('forms.callback', lang)}
    </button>
  </div>
</header>

<!-- Mobile Header -->
<div class="mobile-header">
  <div class="mobile-header-inner">
    <a href={base || '/'}>
      <img src="/img/logo.svg" alt="Rustrade" class="logo" width="120" height="32" />
    </a>
    
    <div class="mobile-actions">
      <div class="lang-selector mobile">
        <button class="lang-trigger" type="button">
          <svg class="lang-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="2" y1="12" x2="22" y2="12"/>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
          </svg>
          <span>{langLabels[lang]}</span>
        </button>
        <div class="selector-dropdown">
          {languages.map((l) => (
            <a 
              href={getAlternateUrl(currentUrl, l)}
              class:list={['lang-option', { active: l === lang }]}
            >
              {langLabels[l]}
            </a>
          ))}
        </div>
      </div>
    
      <button class="burger-btn" data-burger aria-label={t('common.menu', lang)}>
        <img src="/img/burger.svg" alt="menu" width="24" height="24" />
      </button>
    </div>
  </div>
</div>

<style>
  @import '../styles/components/header.css';
</style>

<script>
  // Language selector handling - click based
  document.querySelectorAll('.lang-selector').forEach(selector => {
    const trigger = selector.querySelector('.lang-trigger');
    trigger?.addEventListener('click', (e) => {
      e.stopPropagation();
      const wasOpen = selector.classList.contains('open');
      
      // Close all other selectors
      document.querySelectorAll('.lang-selector.open').forEach(s => {
        s.classList.remove('open');
      });
      
      // Toggle this one
      if (!wasOpen) {
        selector.classList.add('open');
      }
    });
  });

  // Close language selector when clicking outside
  document.addEventListener('click', () => {
    document.querySelectorAll('.lang-selector.open').forEach(el => {
      el.classList.remove('open');
    });
  });
</script>
