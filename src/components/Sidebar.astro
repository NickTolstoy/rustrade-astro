---
import type { Lang } from '@/i18n';
import { t, getBaseUrl } from '@/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const base = getBaseUrl(lang);

// Cases data matching original PHP site
const cases = [
  {
    id: 'sugar-factory',
    icon: '/img/case_icons/sugar.svg',
    title: { ru: 'Сахарный завод', en: 'Sugar Factory' },
    description: { 
      ru: 'Замена устаревшей ТГУ на высокоэффективную полной заводской готовности',
      en: 'Replacement of outdated TGU with highly efficient factory-ready unit'
    }
  },
  {
    id: 'oil-factory',
    icon: '/img/case_icons/oil.svg',
    title: { ru: 'Маслоэкстракционный завод', en: 'Oil Extraction Plant' },
    description: { 
      ru: 'Установка турбогенераторной установки мощностью 5 МВт',
      en: 'Installation of 5 MW turbogenerator unit'
    }
  },
  {
    id: 'tgk',
    icon: '/img/case_icons/tgk.svg',
    title: { ru: 'ТГК', en: 'TGK' },
    description: { 
      ru: 'Установка турбогенераторной установки мощностью 2,5 МВт',
      en: 'Installation of 2.5 MW turbogenerator unit'
    }
  },
  {
    id: 'chemist-factory',
    icon: '/img/case_icons/chemistry.svg',
    title: { ru: 'Химический завод', en: 'Chemical Plant' },
    description: { 
      ru: 'Установка турбогенераторной установки мощностью 3,8 МВт',
      en: 'Installation of 3.8 MW turbogenerator unit'
    }
  }
];
---

<aside class="info-menu">
  <div class="info-menu-header">
    <a href={base || '/'}>
      <img src="/img/logo.svg" alt="Rustrade" class="logo" width="120" height="32" />
    </a>
  </div>
  
  <div class="info-menu-cards">
    <!-- About Company Card -->
    <a class="info-menu-card" href={`${base}/about`}>
      <div class="info-menu-card-header">
        <p>{t('nav.about', lang)}</p>
        <p>{t('about.readMore', lang)}</p>
      </div>
      <div class="info-menu-card-content">
        <div class="info-menu-card-icon">
          <img src="/img/case_icons/about.svg" alt="" width="24" height="24" />
        </div>
        <div class="info-menu-card-description">
          <h4>{t('nav.about', lang)}</h4>
          <p>{t('about.description', lang).slice(0, 100)}...</p>
        </div>
      </div>
    </a>
    
    <!-- Individual Case Cards (like original PHP site) -->
    {cases.map(caseItem => (
      <a class="info-menu-card nav-card" href={`${base}/cases/${caseItem.id}`}>
        <div class="info-menu-card-header">
          <p>{t('cases.title', lang)}</p>
          <p>{t('cases.viewCase', lang)}</p>
        </div>
        <div class="info-menu-card-content">
          <div class="info-menu-card-icon">
            <img src={caseItem.icon} alt="" width="24" height="24" />
          </div>
          <div class="info-menu-card-description">
            <h4>{caseItem.title[lang]}</h4>
            <p>{caseItem.description[lang]}</p>
          </div>
        </div>
      </a>
    ))}
    
    <!-- Articles Card -->
    <a class="info-menu-card nav-card" href={`${base}/news`}>
      <div class="info-menu-card-header">
        <p>{t('news.title', lang)}</p>
        <p>{t('news.readMore', lang)}</p>
      </div>
      <div class="info-menu-card-content">
        <div class="info-menu-card-icon">
          <img src="/img/case_icons/article.svg" alt="" width="24" height="24" />
        </div>
        <div class="info-menu-card-description">
          <h4>{lang === 'ru' ? 'Энергоэффективность' : 'Energy Efficiency'}</h4>
          <p>{lang === 'ru' ? 'Как повысить энергоэффективность предприятия' : 'How to improve enterprise energy efficiency'}</p>
        </div>
      </div>
    </a>
  </div>
  
  <button class="sidebar-contact-btn" data-modal="contact">
    <img src="/img/message.svg" alt="" width="20" height="20" />
    {t('forms.startProject', lang)}
  </button>
</aside>

<style>
  .info-menu {
    position: fixed;
    left: var(--space-2);
    top: var(--space-2);
    bottom: var(--space-2);
    width: var(--sidebar-width);
    background: #F8F8F8;
    border: 1px solid #E7E5E6;
    border-radius: var(--radius-xl);
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    z-index: var(--z-fixed);
    overflow-y: auto;
  }

  .info-menu-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
    padding-bottom: 0;
    border-bottom: none;
  }

  .info-menu .logo { height: 44px; width: auto; }

  .info-menu-cards {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    flex: 1;
    overflow-y: auto;
  }

  .info-menu-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-3);
    background: #fff;
    border: 1px solid #E7E5E6;
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    transition: all var(--transition-base);
    text-decoration: none;
    margin-right: 6px; /* Запас для hover-эффекта */
  }

  .info-menu-card:hover {
    background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(255,255,255,0.6));
    border-color: #000;
    transform: translateX(5px);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    backdrop-filter: blur(10px);
  }

  .info-menu-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .info-menu-card-header p { font-size: 11px; color: #5C5A5A; margin: 0; }
  .info-menu-card-header p:last-child { color: #5C5A5A; }

  .info-menu-card-content {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .info-menu-card-icon {
    width: 40px;
    height: 40px;
    min-width: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border-radius: var(--radius-md);
  }

  .info-menu-card-icon img { width: 40px; height: 40px; }

  .info-menu-card-description h4 {
    color: #2A2D2E;
    font-size: 14px;
    font-weight: 700;
    margin: 0 0 4px;
    line-height: 1.3;
  }

  .info-menu-card-description p {
    color: #5C5A5A;
    font-size: 12px;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .sidebar-contact-btn {
    margin-top: var(--space-4);
    padding: var(--space-3);
    background: linear-gradient(135deg, 
      rgba(2, 132, 199, 0.95) 0%, 
      rgba(14, 165, 233, 0.9) 50%,
      rgba(56, 189, 248, 0.9) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: white;
    font-weight: 700;
    font-size: var(--text-sm);
    transition: all 0.4s ease;
    border: 1px solid rgba(255, 255, 255, 0.3);
    cursor: pointer;
    box-shadow: 
      0 4px 20px rgba(14, 165, 233, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
    position: relative;
    overflow: hidden;
  }

  .sidebar-contact-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 100%);
    transition: left 0.5s ease;
  }

  .sidebar-contact-btn:hover::before {
    left: 100%;
  }

  .sidebar-contact-btn:hover {
    transform: translateY(-2px);
    background: linear-gradient(135deg, 
      rgba(3, 105, 161, 0.95) 0%, 
      rgba(2, 132, 199, 0.95) 50%,
      rgba(14, 165, 233, 0.95) 100%);
    box-shadow: 
      0 8px 32px rgba(14, 165, 233, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }

  .sidebar-contact-btn img {
    filter: brightness(0) invert(1) drop-shadow(0 0 0.5px white);
    width: 20px;
    height: 20px;
  }

  /* 1351px - 1445px: sidebar width=300px */
  @media (max-width: 1445px) and (min-width: 1351px) {
    .info-menu {
      width: 300px;
      padding: var(--space-3);
    }
    .info-menu .logo { height: 30px; }
    .info-menu-card { padding: var(--space-3); }
    .info-menu-card-icon { width: 38px; height: 38px; }
    .info-menu-card-icon img { width: 20px; height: 20px; }
    .info-menu-card-description h4 { font-size: 13px; }
    .info-menu-card-description p { font-size: 11px; }
    .sidebar-contact-btn { padding: var(--space-3); font-size: 13px; }
  }

  /* 1201px - 1350px: sidebar width=300px */
  @media (max-width: 1350px) and (min-width: 1201px) {
    .info-menu {
      width: 300px;
      padding: var(--space-3);
    }
    .info-menu .logo { height: 30px; }
    .info-menu-card { padding: var(--space-3); }
    .info-menu-card-icon { width: 38px; height: 38px; }
    .info-menu-card-icon img { width: 20px; height: 20px; }
    .info-menu-card-description h4 { font-size: 13px; }
    .info-menu-card-description p { font-size: 11px; }
    .sidebar-contact-btn { padding: var(--space-3); font-size: 13px; }
  }

  /* Mobile: hide sidebar */
  @media (max-width: 1200px) {
    .info-menu { display: none; }
  }
</style>
